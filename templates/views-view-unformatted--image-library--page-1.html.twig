<script type="text/javascript">
	
	$(function () {
		$(".load-more-btn").show();
	    $("div.press-item-li").slice(0, 3).show();
	    $(".load-more-btn").on('click', function (e) {
	        e.preventDefault();
	        $("div.press-item-li:hidden").slice(0, 3).slideDown();
	        if ($("div.press-item-li:hidden").length == 0) {
	            $(".load-more-btn").fadeOut('slow');
	        }
	        $('html,body').animate({
	            scrollTop: $(this).offset().top
	        }, 1500);
	    });
	});
</script>