                <div class="caption">
                    <p class=""><span class="modal-title">Lorem ipsum dolor sit amet, conset</span> <br />
                </div>
            </div>

            <div class="col-md-6" id="ModalForm">  
                <h3>Download this Image</h3>
                <p class="request-form-error-message text-center" style="margin:0px; margin-bottom:10px;">
					
				</p>
                
                {{formform}}
                
                <input class="btn btn-big btn-download btn-red button button--primary" style="text-align: center; margin: 0px auto; width: 70%; display: none;" data-drupal-selector="edit-download" type="submit" id="edit-download--107" name="op" value="Download Video">
                
                <a href="javascript:void(0);"></a>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

    


<script type="text/javascript">
	
	$(function () {
		var cid = getParameterByName('categoryid');
		if( cid ) {
			setTimeout(function(){
				$('.selectpicker').val(cid);
				$('.selectpicker').selectpicker('refresh');
			}, 1500);

		}
		
		
	    $("div.press-item-li").slice(0, 9).show();
	    
	    if ($("div.press-item-li").length > 9) {
			$(".load-more-btn").show();
		}
			
	    $(".load-more-btn").on('click', function (e) {
	        e.preventDefault();
	        $("div.press-item-li:hidden").slice(0, 9).slideDown();
	        if ($("div.press-item-li:hidden").length == 0) {
	            $(".load-more-btn").fadeOut('slow');
	        }
	        $('html,body').animate({
	            scrollTop: $(this).offset().top
	        }, 1500);
	    });
	});
	
	$(document).ready(function() {

		$('a[data-toggle=modal], button[data-toggle=modal]').click(function () {
	  		var title = $(this).data('title');
	  		var thumbnail = $(this).data('thumbnail');
	  		var image = $(this).data('image');
	  		var description = "None";
	  		var codes = "Node";
	  		var credit = "None";
	  		
	  		$('.modal-title').text(title);
	  		$('.modal-codes').text(codes);
	  		
	  		$('.code-text').val(codes);
	  		$('.site-name-text').val('Terror Behind The Walls');
	  		
	  		$('.modal-description').text(description);
	  		$('.modal-thumbnail').attr("src", thumbnail);
	  		$('.press-modal').data("source", image);
	  		$('.modal-credit').text(credit);
	  		
	  	});
	  	
	  	$('.btn-download').click(function(){
		  	var dLink = $('.press-modal').data("source");
		  	window.open(dLink);	
		  	//location.reload();
	  	});
	  	
	  	$('#myImageModal').on('hidden.bs.modal', function () {
		  	//if($('.btn-download').is(':visible')) {
		  		$('#request-form-wrapper-id form').css('display', 'block');
		  		$('.btn-download').css('display', 'none');
		  	//}
	  	});
	});
</script>